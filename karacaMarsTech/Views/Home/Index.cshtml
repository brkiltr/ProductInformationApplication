@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using karacaMarsTech.Models.Siniflar
@{karacaMarsTech.Controllers.HomeController homeController = new karacaMarsTech.Controllers.HomeController(); }
@model List<Urunler>



<!--product area start-->
<div class="product_area mb-64">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="product_header">
                    <div class="section_title">
                        <a href="/Home/Index/">
                            <img style="" src="~/krc/krcLogoPNG.png" width="18%" alt="karacaLogo" />
                        </a>
                        <h2 style="display: block; font-weight: 800; margin-top:-5px;">
                            EVİNDE KOLAYCA İÇECEĞİNİ HAZIRLA!
                        </h2>
                        <h4 style="display: block; font-weight: 600; margin-top:17px;">
                            Hangi içecek türü sizi anlatıyor? Favori makineni seç
                        </h4>
                    </div>
                    <div class="product_tab_btn">
                        <ul class="nav" role="tablist">
                            
                            @foreach (var item in ViewBag.Kategori)
                            {
                                
                                <li>
                                    <a class="" href="/Home/Index/@item.KategoriID" style="border-radius: 100%; border: none">
                                        <img src="@item.KategoriGorseli" alt="@item.KategoriAdi" title="@item.KategoriAdi" style="border-radius: 100%; height: 150px; width: 150px" />

                                        <p style="text-align:center;">@item.KategoriAdi</p>


                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="product_container">
            <div class="row">
                <div class="col-12">
                    <div class="tab-content">
                        
                            <div class="tab-pane fade show active" id="" role="tabpanel">
                                <!--shop  area start-->
                                <div class="shop_area shop_fullwidth mt-70 mb-70">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-12">
                                                <!--shop wrapper start-->
                                                <!--shop toolbar start-->
                                                <!--shop toolbar end-->
                                                <div class="row shop_wrapper">
                                                    
                                                    @foreach (var items in ViewBag.Urunler)
                                                    {
                                                        <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                                                            <div class="single_product">
                                                                <div class="product_thumb">
                                                                    <a class="primary_img"
                                                                       href="/Urun/Index/@items.UrunSirasi">
                                                                        <img src="@items.UrunGorseli" alt="@items.UrunAdi" />
                                                                    </a>
                                                                </div>
                                                                <div class="product_content grid_content">
                                                                    <h4 class="product_name">
                                                                        <a href="/Urun/Index/@items.UrunID">@items.UrunAdi</a>
                                                                    </h4>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>

                                                <!--shop toolbar end-->
                                                <!--shop wrapper end-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--shop  area end-->
                            </div>
                        

                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--product area end-->