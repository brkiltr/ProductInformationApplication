@using karacaMarsTech.Models.Siniflar
@{
    ViewBag.Title = "UrunDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Urunler>




@foreach (var item in ViewBag.UrunDetay)
{
    <div class="col-12 mt-10">
        <a href="/Home/Index">
            <img style="margin-left:44%;" src="~/krc/krcLogoPNG.png" width="12%" alt="karacaLogo" />
        </a>
        
    </div>
    <!--product details start-->
    <div class="product_details mt-10 mb-20">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <a href="/Home/Index">
                        <button style="width: 10%; box-shadow: 1px 1px 20px #bfbfbf " type="button" class="button mobBackButton"><img src="~/krc/back.png" width="20%" style="margin-right:5px" />Geri</button>
                    </a>

                    <video width="100%" height="640" controls="controls" autoplay loop style="margin-top:20px;">
                        <source src="@item.UrunVideosu" type="video/mp4" />
                    </video>

                    @*<div class="product-details-tab">
            <div class="zoomWrapper single-zoom">
                <img style="width:100%; height:500px;" id="zoom1" src="@item.UrunGorseli" data-zoom-image="~/krc/assets/img/product/productbig4.jpg" alt="@item.UrunAdi">
            </div>
        </div>*@
                </div>
                <div class="col-lg-12 col-md-12 mt-50">
                    <div class="product_d_right">
                        <h1 style="text-align:left; font-size:25px; font-weight:800;">@item.UrunAdi</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--product details end-->
    <!--product info start-->
    <div class="product_d_info mb-65">
        <div class="container mb-20">
            <div class="row">
                <div class="col-12">
                    <div class="product_d_inner">
                        <div class="product_info_button" style="border:none;">
                            <ul class="nav" role="tablist">
                                <li>
                                    <a class="active" data-toggle="tab" href="#info" role="tab" aria-controls="info" aria-selected="false">Ürün Açıklaması</a>
                                </li>
                            </ul>
                        </div>
                        <div class="">
                            <div class="">
                                <div class="product_info_content">
                                    <p>@Html.Raw(item.UrunAciklamasi)</p>
                                </div>
                                <div class="product_d_table">
                                    <form action="#">
                                        <style>
                                            table {
                                                font-family: arial, sans-serif;
                                                border-collapse: collapse;
                                                width: 100%;
                                            }

                                            td, th {
                                                border: 1px solid #ebebeb;
                                                text-align: left;
                                                padding: 8px;
                                            }

                                            tr:nth-child(even) {
                                                background-color: #ebebeb;
                                            }
                                        </style>
                                        <table style="border:none;">
                                            <tbody style="border:none;">
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Marka</td>
                                                    <td style="border:none;">@item.UrunMarkasi</td>
                                                </tr>
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Model No</td>
                                                    <td style="border:none;">@item.UrunModelNo</td>
                                                </tr>
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Barkod</td>
                                                    <td style="border:none;">@item.UrunBarkod</td>
                                                </tr>
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Renk</td>
                                                    <td style="border:none;">@item.UrunRenk</td>
                                                </tr>
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Malzeme Türü</td>
                                                    <td style="border:none;">@item.UrunMalzemeTuru</td>
                                                </tr>
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Ürün Grubu</td>
                                                    <td style="border:none;">@item.UrunGrubu</td>
                                                </tr>
                                                <tr style="border:none;">
                                                    <td style="border:none;" class="first_child">Menşei</td>
                                                    <td style="border:none;">@item.UrunMensei</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    @{ int onceki = item.UrunSirasi - 1;
                        int sonraki = item.UrunSirasi + 1;}
                    <a href="/Urun/Index/@onceki">
                        <button style="width: 15%; box-shadow: 1px 1px 20px #bfbfbf; margin-top:3%; margin-bottom: 10%; float:left;" type="button" class="button mobLRButton"><img src="~/krc/assets/img/left-arrow.png" width="15%" style="margin-right:10px" />Önceki</button>
                    </a>
                    <a href="/Urun/Index/@sonraki">
                        <button style="width: 15%; box-shadow: 1px 1px 20px #bfbfbf; margin-top:3%; margin-bottom: 10%; float:right;" type="button" class="button mobLRButton">Sonraki<img src="~/krc/assets/img/right.png" width="15%" style="margin-left:10px" /></button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--product info end-->
}


